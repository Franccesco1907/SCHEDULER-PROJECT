<!DOCTYPE html>
<html class="no-js" lang="es">
  <head>
    <%- include('../../partials/head', {title: 'Registro de Nuevo Departamento'}); %>
    <link
      rel="stylesheet"
      href="/assets/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css"
    />
    <link rel="stylesheet" href="/assets/plugins/sweetalert/sweetalert.css" />
    <link rel="stylesheet" href="/assets/plugins/dropzone/dropzone.css" />
    <link rel="stylesheet" href="/assets/plugins/bootstrap-select/css/bootstrap-select.css"/>
    <script
      src="https://kit.fontawesome.com/c1c34b92ef.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body class="theme-purple">
    <%- include('../../partials/app/header') %> <%-
    include('../../partials/app/topbar'); %> <%-
    include('../../partials/app/leftsidebar', {user}); %>

    <!-- Main Content -->
    <section class="content">
      <div class="block-header">
        <div class="row">
          <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
              Departamentos<small
                >Registro de departamento
              </small>
            </h2>
          </div>
          <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
              <li class="breadcrumb-item">
                <a href="/"><i class="zmdi zmdi-home"></i>App</a>
              </li>
              <li class="breadcrumb-item">
                <a href="">Universidad</a>
              </li>
              <li class="breadcrumb-item active">Registrar Departamento</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <!-- Register Department -->
        <div class="row clearfix">
          <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
              <div class="header">
                <h2><strong>Información del departamento</strong></h2>
              </div>
              <div class="body">
                <input
                    type="hidden"
                    name="_csrf"
                    id="_csrf"
                    value="<%= csrfToken %>"
                  />
                  <div class="row clearfix">
                    
                    <div class="col-md-6">
                        <label class="mb-1" for="departmentCode"
                          >Código del departamento
                          <span class="required-field">*</span></label
                        >
                        <div class="form-group">
                          <input
                            type="text"
                            class="form-control"
                            name="departmentCode"
                            id="department-code"
                            placeholder="Ingrese el código del departamento"
                            required
                          />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="date-create"
                          >Fecha de creación
                          <span class="required-field">*</span></label
                        >
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-calendar"></i>
                          </span>
                          <input
                            type="text"
                            class="form-control date"
                            id="date-create"
                            placeholder="Elija la fecha de creación"
                            data-dtp="dtp_wghlr"
                            required
                          />
                        </div>
                    </div>
                  </div>
                  <div class="row clearfix">
                    <div class="col-md-6">
                        <label class="mb-1" for="departmentName"
                          >Nombre del departamento <span class="required-field">*</span></label
                        >
                        <div class="form-group">
                          <input
                            type="text"
                            class="form-control"
                            name="departmentName"
                            id="department-name"
                            placeholder="Ingrese el nombre del departamento"
                            required
                          />
                        </div> 
                    </div>
                  
                     
                    <div class="col-lg-12 pt-3">
                      <label class="mb-1" for="description"
                        >Descripción: </label
                      >
                      <div class="form-group">
                        <textarea id="description"
                          rows="4"
                          class="form-control no-resize"
                          placeholder=""
                          style="background-color: gainsboro"
                        ></textarea>
                      </div>
                    </div>

                    <div class="col-lg-12">
                      <div
                        class="float-right"
                        style="padding-top: 10px !important"
                      >
                        <a
                          type="button"
                          class="btn btn-danger waves-effect"
                          href="/admin/list-departments"
                        >
                          Cancelar
                        </a>
                        <button id="register-department" class="btn btn-primary ml-3">
                          Registrar
                        </button>
                        <button id="edit-department" class="btn btn-primary ml-3">
                          Guardar
                        </button>
                      </div>
                    </div>
                  </div>
               
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <button id="success-register-department" class="btn btn-raised btn-primary waves-effect btn-round" data-type="success" style="display: none"></button>


    <%- include('../../partials/app/scripts', {view: 'sb-register-department'}); %>

    <script src="/assets/plugins/bootstrap-notify/bootstrap-notify.js"></script>
    <script src="/light/assets/bundles/mainscripts.bundle.js"></script>
    <script src="/assets/plugins/dropzone/dropzone.js"></script>
    <script src="../assets/plugins/momentjs/moment.js"></script>
    <script src="/assets/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>
    <script src="/assets/plugins/sweetalert/sweetalert.min.js"></script>

    <script>
      var jwt = "<%= jwt %>";
      var idPersona = "<%= user.idPersona %>";
    </script>

    <script
      src="/js/user/admin/register-department.js"
      type="module"
    ></script>
  </body>
</html>