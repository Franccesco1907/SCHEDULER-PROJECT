<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <%- include('../partials/head', {title: 'Registro de Docentes'}); %>
    <link rel="stylesheet" href="/assets/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css"/>
  <link rel="stylesheet" href="/light/assets/css/main.css">
    <link rel="stylesheet" href="/assets/plugins/sweetalert/sweetalert.css" />
    <link rel="stylesheet" href="/assets/plugins/select2/select2.css" />
    <script src="https://kit.fontawesome.com/c1c34b92ef.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/light/assets/css/main.css">

    <style>
      .professor-selected {
        background-color: #fff8b5 !important;
      }

      .modal {
        padding-top: 50px !important;
      }

      #table-professor-preview thead th,
      #table-professor-preview thead td {
        padding: 8px 10px;
        /* e.g. change 8x to 4px here */
      }

      #table-professor-preview tbody th,
      #table-professor-preview tbody td {
        padding: 4px 10px;
        /* e.g. change 8x to 4px here */
      }
    </style>
  </head>

  <body class="theme-purple">
    <%- include('../partials/app/header') %> <%-
    include('../partials/app/topbar'); %> <%-
    include('../partials/app/leftsidebar', {user}); %>

    <section class="content">
      <div class="block-header">
        <div class="row">
          <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
              Docentes
              <small>Listado de Docentes</small>
            </h2>
          </div>
          <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
              <li class="breadcrumb-item">
                <a href="/"><i class="zmdi zmdi-home"></i>App</a>
              </li>
              <li class="breadcrumb-item"><a href="/">Docentes</a></li>
              <li class="breadcrumb-item active">Registro de Docentes</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
          <div class="col-lg-12">
            <div class="card">
              <div class="body">  
                  <div class="row clearfix"> 
                    <div class="col-md-4">
                      <label>Nombres <span class="required-field">*</span></label>
                      <div class="form-group">
                        <input
                          type="text"
                          class="form-control"
                          placeholder=""
                          id="name"
                          required
                        />
                      </div>  
                    </div>
                    <div class="col-md-4">
                      <label>Apellido Paterno <span class="required-field">*</span></label>
                      <div class="form-group">
                      <input
                        type="text"
                        class="form-control"
                          placeholder=""
                          id="last-name-1"
                          required  />
                      </div>
                    </div>
                    <div class="col-md-4">
                      <label>Apellido Materno</label>
                      <div class="form-group">
                      <input
                        type="text"
                        class="form-control"
                        placeholder=""
                        id="last-name-2"
                      />
                      </div>
                    </div>

                  </div>
                  
                  <div class="row clearfix "> 
                    <div class="col-md-4">
                      <label>Código PUCP <span class="required-field">*</span></label>        
                      <input
                        type="text"
                        class="form-control"
                        placeholder=""
                        id="code"
                        required
                      />
                    </div>

                    <div class="col-md-4"> <label>Correo Electronico<span class="required-field">*</span></label>
                      <div class="input-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-email"></i></span>
                        <input type="text" class="form-control email" placeholder="Ex: example@example.com" id="email" required>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <label for="date-create">
                        Fecha de nacimiento
                      </label>
                      <div class="input-group">
                        <span class="input-group-addon">
                        <i class="zmdi zmdi-calendar"></i>
                        </span>
                        <input
                          type="text"
                          class="form-control date"
                          id="birthday"
                          placeholder="Elija la fecha de nacimiento"
                          data-dtp="dtp_wghlr"
                          required
                        />
                    </div>
                   </div>
                  </div>
                  <div class="row clearfix"> 
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Tipo de Documento</label>
                        <select class="form-control show-tick ms select2" id="documentType" data-placeholder="Seleccione un tipo de documento" required >
                            <option value="DNI">DNI</option>
                            <option value="PASAPORTE">PASAPORTE</option>
                            <option value="CARNET_EXTRANJERIA">CARNET DE EXTRANJERIA</option>
                            
                        </select>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <label>Numero de Documento<span class="required-field">*</span> </label>
                        <div class="form-group">
                            <input
                              type="text"
                              class="form-control"
                              placeholder=""
                              id="IDdocument"
                              required
                            />
                          </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group"> <label>Teléfono Celular</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="zmdi zmdi-phone"></i></span>
                            <input type="tel" class="form-control mobile-phone-number" placeholder="Ex: +00 000-00-00" id="cellphone">
                        </div>
                    </div>
                    </div>
                  </div>  

                  <div class="row clearfix"> 
                    <div class="col-md-4">
                      <label>Sección <span class="required-field">*</span></label>
                      <select class="form-control show-tick ms select2" id="section">
                        <% for (let section of sections){%>
                          <option value="<%= section.idSeccion %>">
                            <%= section.nombre %>
                          </option>
                        <% } %>
                      </select> 
                    </div>
                    <div class="col-md-4">
                      <label>Categoria <span class="required-field">*</span></label>
                      <select class="form-control show-tick ms select2" id="category">
                        <option value="PRINCIPAL">PRINCIPAL</option>
                        <option value="ASOCIADO">ASOCIADO</option>
                        <option value="AUXILIAR">AUXILIAR</option>
                        <option value="CONTRATADO">CONTRATADO</option>
                        <option value="EXTRAORDINARIO">EXTRAORDINARIO</option> 
                      </select> 
                    </div>
                    <div class="col-md-4">
                      <label>Dedicación <span class="required-field">*</span></label>
                      <select class="form-control show-tick ms select2" id="dedication">
                        <option value="TC">TC</option>
                        <option value="TPC">TPC</option>
                        <option value="TPA">TPA</option>
                      </select>
                    
                    </div>
                  </div>  

                  
                  <div class="row clearfix"> 
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Sexo</label>
                        <br>
                        <div class="radio inlineblock m-r-20">
                            <input type="radio" name="gender" id="male" class="with-gap" value="masculino">
                            <label for="male">Masculino</label>
                        </div>                                
                        <div class="radio inlineblock">
                            <input type="radio" name="gender" id="Female" class="with-gap" value="femenino" checked="">
                            <label for="Female">Femenino</label>
                        </div>
                      </div>
                    
                    </div>
                    <div class="col-md-4">
                      <label>Dirección</label>                        
                          <input
                              type="text"
                              class="form-control"
                              placeholder=""
                              id="address"
                            />
                  </div>  
                </div>

                <div class="row col-lg-12 "> 
                    <div class="col-lg-12 ">
                        <div class="float-right">
                            <a class="btn btn-raised btn-danger btn-round waves-effect" type="button" href="/department-assistant/list-professor" id="cancel">
                              Cancelar<i class="ml-2 fas arrow_back" aria-hidden="true"></i></a>    
                            <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect float-right" id="save-professor">
                              Registrar <i class="ml-2 fas fa-user-plus" aria-hidden="true"></i>
                            </button>
                        </div>
                            
                    </div>
                
                </div>


              
            </div>
          </div>
        </div>
        <!-- #END# Exportable Table -->
      </div>


 


    </section>

 





    <%- include('../partials/app/scripts', {view: 'sb-register-professor'}); %>

    <!-- Jquery DataTable Plugin Js -->
    <script src="/assets/plugins/bootstrap-notify/bootstrap-notify.js"></script>
    <script src="/light/assets/bundles/mainscripts.bundle.js"></script>
    <script src="../assets/plugins/momentjs/moment.js"></script>
    <script src="/assets/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>
    <script src="/assets/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="/assets/plugins/select2/select2.min.js"></script>
    <script>
           var sections = JSON.parse('<%-JSON.stringify(sections)%>');
            var usuario=JSON.parse('<%-JSON.stringify(user)%>');
            var csrfToken="<%=csrfToken%>"
            var jwt = "<%= jwt %>";
    </script>

    <script src="/js/department-assistant/register-professor.js" type="module"></script>
  </body>
</html>