<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <%- include('../partials/head', {title: 'Listado de Cursos'}); %>
    <link
      rel="stylesheet"
      href="/assets/plugins/jquery-datatable/dataTables.bootstrap4.min.css"
    />

    <link rel="stylesheet" href="/assets/plugins/dropzone/dropzone.css" />

    <script
      src="https://kit.fontawesome.com/c1c34b92ef.js"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="/assets/plugins/sweetalert/sweetalert.css" />

    <link
      rel="stylesheet"
      href="/assets/plugins/bootstrap-select/css/bootstrap-select.css"
    />

    <style>
      .course-selected {
        background-color: #fff8b5 !important;
      }

      .modal {
        /*padding-top: 50px !important;*/
      }

      #table-courses-preview thead th,
      #table-courses-preview thead td {
        padding: 8px 10px;
        /* e.g. change 8x to 4px here */
      }

      #table-courses-preview tbody th,
      #table-courses-preview tbody td {
        padding: 4px 10px;
        /* e.g. change 8x to 4px here */
      }
    </style>
  </head>

  <body class="theme-purple">
    <%- include('../partials/app/header') %> <%-
    include('../partials/app/topbar'); %> <%-
    include('../partials/app/leftsidebar', {user}); %>

    <section class="content">
      <div class="block-header">
        <div class="row">
          <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
              Cursos
              <small>Listado de Cursos</small>
            </h2>
          </div>
          <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
              <li class="breadcrumb-item">
                <a href="/"><i class="zmdi zmdi-home"></i>App</a>
              </li>
              <li class="breadcrumb-item"><a href="/">Cursos</a></li>
              <li class="breadcrumb-item active">Listado de Cursos</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
          <div class="col-lg-12">
            <div class="card">
              <div class="header">
                <div class="row pt-2">
                  <div class="col-sm-12">
                    <div class="float-left">
                      <a id="vista-por-cursos"
                      type="button"
                      class="btn btn-primary waves-effect"
                      href="/department-assistant/list-teachers">
                        Vista por Docentes</a>
                        
                    </div>
                    <div class="float-right">
                      <a
                        id="ver-carga-horaria"
                        type="button"
                        class="btn btn-primary waves-effect"
                        href="/department-assistant/list-courses-detail"
                      >
                      Ver Detalle 
                      </a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="body">
                <div class="row clearfix pb-0">
                  <div class="col-lg-3 col-md-6">
                    <b>Sección</b>
                    <select id="selectSection" class="form-control show-tick">
                      <% for (let section of sections){%>
                        <option value="<%= section.idSeccion %>">
                          <%= section.nombre %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="col-lg-5"></div>
                  <div class="col-lg-4 col-md-6">
                    <b>Código/Nombre</b>
                    <div class="form-group">
                      <input
                        type="text"
                        class="form-control"
                        placeholder=""
                      />
                    </div>
                  </div>
                </div>
                <table id="courses-data-table" class="
                table table-bordered table-striped table-hover
                dataTable
                js-exportable
                ">
                  <thead style="background-color: #167bc3; color:white">
                    <tr>
                      <th>Código</th>
                      <th>Nombre del Curso</th>
                      <th>Horas de Dictado de Clase</th>
                      <th>Número de Horarios</th>
                      <th>Facultad</th>
                      <th>Dictado</th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- courses have to be replace with requests -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- #END# Exportable Table -->
      </div>
    </section>

    <%- include('../partials/app/scripts', {view: 'sb-coursesDep-list'}); %>

    <!-- Jquery DataTable Plugin Js -->
    <script src="/light/assets/bundles/datatablescripts.bundle.js"></script>
    <script src="/assets/plugins/jquery-datatable/buttons/dataTables.buttons.min.js"></script>
    <script src="/assets/plugins/jquery-datatable/buttons/buttons.bootstrap4.min.js"></script>
    <script src="/assets/plugins/jquery-datatable/buttons/buttons.colVis.min.js"></script>
    <script src="/assets/plugins/jquery-datatable/buttons/buttons.html5.min.js"></script>
    <script src="/assets/plugins/jquery-datatable/buttons/buttons.print.min.js"></script>
    <script src="/assets/plugins/dropzone/dropzone.js"></script>

    <script src="/assets/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="/light/assets/bundles/mainscripts.bundle.js"></script>

    <script>
      var sections = <%- JSON.stringify(sections) %>;
      var jwt = "<%= jwt %>";
    </script>

    <script src="/js/department-assistant/list-courses.js" type="module"></script>
  </body>
</html>
