<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
  <%- include('../partials/head', {title: 'Listado de Preferencias'}); %>
  <link rel="stylesheet" href="/assets/plugins/jquery-datatable/dataTables.bootstrap4.min.css" />

  <link rel="stylesheet" href="/assets/plugins/dropzone/dropzone.css">

  <script src="https://kit.fontawesome.com/c1c34b92ef.js" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/assets/plugins/sweetalert/sweetalert.css" />

  <link rel="stylesheet" href="/assets/plugins/bootstrap-select/css/bootstrap-select.css" />

  <link rel="stylesheet" href="/assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css">

  <link rel="stylesheet" href="/assets/plugins/select2/select2.css" />

  <style>
    .course-selected {
      background-color: #FFF8B5 !important;
    }

    .modal {
      /*padding-top: 50px !important;*/
    }

    #table-courses-preview thead th,
    #table-courses-preview thead td {
      padding: 8px 10px;
      /* e.g. change 8x to 4px here */
    }

    #table-courses-preview tbody th,
    #table-courses-preview tbody td {
      padding: 4px 10px;
      /* e.g. change 8x to 4px here */
    }
  </style>
</head>

<body class="theme-purple">
  <%- include('../partials/app/header') %>
  <%- include('../partials/app/topbar'); %>
  <%- include('../partials/app/leftsidebar', {user}); %>

  <section class="content">
    <div class="block-header">
      <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
          <h2>
            Listado de Preferencias
            <small>Preferencias de Dictado</small>
          </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
          <ul class="breadcrumb float-md-right">
            <li class="breadcrumb-item">
              <a href="/"><i class="zmdi zmdi-home"></i>App</a>
            </li>
            <li class="breadcrumb-item"><a href="/">Docente</a></li>
            <li class="breadcrumb-item active">Listado de Preferencias</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <!-- Exportable Table -->
      <div class="row clearfix">
        <div class="col-lg-12">
          <div class="card">
            <div class="header">
              <div class="row pt-2">
                <div class="col-sm-12">
                  <div class="float-left">
                    <h2 id="cicloActual"><strong>Ciclo</strong></h2>
                    <h2 id="numeroCursos"><strong>Número de Cursos Seleccionados:</strong></h2>
                    <h2 id="cargaHorasTotal"><strong>Carga de Horas Total Seleccionada:</strong></h2>
                  </div>
                  <div class="float-right">
                    <a type="button" class="btn btn-primary" href="/teacher/register-preferences">
                      Actualizar Preferencias
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <div class="body">
              <div class="row clearfix pb-0">
                <div class="col-lg-4 col-md-6">
                  <b>Código/Nombre del Curso</b>
                  <div class="form-group">
                    <input id="codigoNombre" type="text" class="form-control" style="margin-top: 7px;" placeholder="Ingrese el nombre o código del curso" />
                  </div>
                </div>
                <div class="col-lg-3">
                    <b>Tipo de Horario</b>
                  <select class="form-control show-tick" id="selectorHorario">
                    <option>Todos</option>
                    <option>Clase</option>
                    <option>Laboratorio</option>
                    <option>Practica</option>
                    <option>Asesoria</option>
                  </select>
                </div>
                <div class="col-lg-2"></div>
                <div class="col-lg-3 col-md-6">
                  <b>Estado</b>
                  <select class="form-control show-tick" id="selectorEstado">
                    <option>Todos</option>
                    <option>Pendiente</option>
                    <option>Atendido</option>
                    <option>Rechazado</option>
                  </select>
                </div>
              </div>
              <div class="table-responsive">
                <table id="preferences-data-table" class="
                    table table-bordered table-striped table-hover
                    dataTable
                    js-exportable
                  ">
                <thead style="background-color: #167bc3; color:white">
                  <tr>
                    <th>Código</th>
                    <th>Nombre del Curso</th>
                    <th>Tipo de Horario</th>
                    <th>Horario</th>
                    <th>Carga de Horas</th>
                    <th>Estado</th>
                  </tr>
                </thead>
                <tbody>
                </tbody>
                </table>
              </div>
              

              <div class="row">
                <div class="col-3">
                  <input type="hidden" id="array-select" class="form-control">
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- #END# Exportable Table -->
    </div>
  </section>

  <%- include('../partials/app/scripts', {view: 'sb-preferences-list'}); %>

  <!-- Jquery DataTable Plugin Js -->
  <script src="/light/assets/bundles/datatablescripts.bundle.js"></script>
  <script src="/assets/plugins/jquery-datatable/buttons/dataTables.buttons.min.js"></script>
  <script src="/assets/plugins/jquery-datatable/buttons/buttons.bootstrap4.min.js"></script>
  <script src="/assets/plugins/jquery-datatable/buttons/buttons.colVis.min.js"></script>
  <script src="/assets/plugins/jquery-datatable/buttons/buttons.html5.min.js"></script>
  <script src="/assets/plugins/jquery-datatable/buttons/buttons.print.min.js"></script>
  <script src="/assets/plugins/dropzone/dropzone.js"></script>

  <script src="/assets/plugins/sweetalert/sweetalert.min.js"></script>
  <script src="/light/assets/bundles/mainscripts.bundle.js"></script>
  <script src="/assets/plugins/select2/select2.min.js"></script>

  <script>
    var jwt = "<%= jwt %>";
    var idDocente="<%= idDocente %>";
  </script>

  <script src="/js/teacher/current-preferences.js" type="module"></script>

</body>

</html>