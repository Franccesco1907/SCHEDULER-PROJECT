<body class="theme-purple">
<%- include('../partials/app/header') %>
<%- include('../partials/app/topbar'); %>
<%- include('../partials/app/leftsidebar', {user}); %>

<section class="content">
    <div class="block-header">
      <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
          <h2 style="padding-top: 1rem;">
            Registrar una Investigación
          </h2>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
          <ul class="breadcrumb float-md-right">
            <li class="breadcrumb-item">
              <a href="/"><i class="zmdi zmdi-home"></i>App</a>
            </li>
            <li class="breadcrumb-item"><a href="">Investigación</a></li>
            <li class="breadcrumb-item"><a href="/investigation-assistant/investigations-repository">Repositorio de Investigaciones</a></li>
            <li class="breadcrumb-item active">Registro</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <!-- Register User -->
      <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="card">
            <div class="header">
              <h2><strong>Datos de la Investigación/Publicación</strong></h2>
            </div>
            <div class="body">
              <div class="row clearfix">
                <div class="col-md-8">
                  <label for="articleName">Nombre del artículo <span class="required-field">*</span></label>
                  <div class="form-group">
                    <input type="text" class="form-control" name="articleName" id="article-name" placeholder="Ingrese el nombre del artículo" required />
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="autor">Autor
                    <span class="required-field">*</span></label>
                  <select class="form-control show-tick ms select2" name="autorName" id="autor-name" data-placeholder="Ingrese el nombre del autor" required>
                    <option></option>
                    <% for (let autor of teachers) { %>
                    <option value="<%= autor.idPersona %>"><%= autor.nombreCompleto %></option>
                    <% } %>
                  </select>
                </div>
                <div class="col-md-12 form-group textarea-placeholder">
                  <label class="mb-1" for="description"
                        >Descripción: <span class="required-field">*</span> </label
                      >
                      <div class="form-group">
                        <textarea id="description"
                          rows="4"
                          class="form-control no-resize"
                          placeholder=""
                          style="background-color: gainsboro"
                        ></textarea>
                      </div>
                </div>
              </div>
              <div class="row clearfix">
                <div class="col-md-4">
                  <label for="year">Año <span class="required-field">*</span></label>
                  <div class="form-group">
                    <input type="number" name="weekly-hours" class="form-control" id="year" placeholder="Ingrese el año de la publicación" required />
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="lab-hours">Lugar  <span class="required-field">*</span> </label> 
                  <div class="form-group">
                    <input type="text" name="lab-hours" class="form-control" id="place" placeholder="Ingrese el lugar de la investigación"  />
                  </div>
                </div>
                <div class="col-md-4">
                  <label>Link de investigación </label> 
                  <div class="form-group">
                    <input name="practice-hours" class="form-control" id="link" placeholder="Ingrese el link de la investigación"  />
                  </div>
                </div>
              </div>
              <div class="row clearfix">
                <div class="col-md-4">
                  <label>Coautores </label> 
                  <div class="form-group">
                    <input type="text" name="practice-hours" class="form-control" id="coautors" placeholder="Ingrese los coautores"  />
                  </div>
                </div>
              </div>
              <div class="row clearfix">
                <div class="col-lg-12">
                  <div class="float-right" style="padding-top: 10px !important">
                    <a id="btn-cancel-changes" type="button" class="btn btn-danger waves-effect" href="/investigation-assistant/investigations-repository">
                      Cancelar <!-- <i class="fas fa-undo pl-2"></i> -->
                    </a>
                    <button id="btn-save-changes" class="btn btn-primary">
                       Guardar Cambios <!-- <i class="fas fa-save pl-2"></i> -->
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


<%- include('../partials/app/scripts', {view: 'sb-investigations-repository'}); %>

